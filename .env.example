# LLM Provider: gemini (default) or claude
MANIM_MCP_LLM_PROVIDER=gemini

# Gemini Configuration (required if using Gemini)
MANIM_MCP_GEMINI_API_KEY=your-gemini-api-key-here
MANIM_MCP_GEMINI_MODEL=gemini-2.5-flash

# Claude Configuration (required if using Claude)
# MANIM_MCP_CLAUDE_API_KEY=your-claude-api-key-here
# MANIM_MCP_CLAUDE_MODEL=claude-sonnet-4-20250514

# LLM Settings
MANIM_MCP_LLM_MAX_RETRIES=3
MANIM_MCP_LLM_TIMEOUT=60

# S3/MinIO Storage (optional)
MANIM_MCP_S3_ENDPOINT=localhost:9000
MANIM_MCP_S3_ACCESS_KEY=minioadmin
MANIM_MCP_S3_SECRET_KEY=minioadmin
MANIM_MCP_S3_BUCKET=manim-renders
MANIM_MCP_S3_SECURE=false

# ChromaDB / RAG (optional, for advanced mode)
MANIM_MCP_CHROMADB_HOST=localhost
MANIM_MCP_CHROMADB_PORT=8001
MANIM_MCP_RAG_ENABLED=true

# Rendering
MANIM_MCP_RENDER_TIMEOUT=180
MANIM_MCP_MAX_CONCURRENT_RENDERS=4

# Server
MANIM_MCP_SERVER_HOST=0.0.0.0
MANIM_MCP_SERVER_PORT=8000
MANIM_MCP_LOG_LEVEL=INFO
